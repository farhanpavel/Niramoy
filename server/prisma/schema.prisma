
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  user_id String @id @default(uuid())
  name String
  email String @unique
  password String
  role String
}

model AIResponse {
  id            Int      @id @default(autoincrement())
  conversation_id Int
  content       String
  created_at    DateTime
}

model Exercise {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  category      String
  duration_minutes Int
}

model DietPlan {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  calorie_target Int
  meals         Meal[]
}

model Meal {
  id            Int      @id @default(autoincrement())
  dietPlanId    Int
  type          String
  items         String
  recipe_description String
  dietPlan      DietPlan @relation(fields: [dietPlanId], references: [id])
}

