
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id     String @id @default(uuid())
  name        String
  email       String @unique
  password    String
  role        String

}

model Response {
  id            Int      @id @default(autoincrement())
  
  ai_response_id Int
  diet_plan_id Int

  created_at    DateTime  @default(now())

  ai_response   AIResponse @relation(fields: [ai_response_id], references: [id])
  exercises     Exercise[]
  diet_plan    DietPlan @relation(fields: [diet_plan_id], references: [id])
}

model AIResponse {
  id            Int      @id @default(autoincrement())
  conversation_id Int

  content       String
  created_at    DateTime  @default(now())

  responses     Response[]
  
}

model Exercise {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  category      String
  duration_minutes Int
  created_at    DateTime  @default(now())

  response_id   Int
  response      Response @relation(fields: [response_id], references: [id])
}

model DietPlan {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  calorie_target Int
  meals         Meal[]
  responses     Response[]
  created_at    DateTime  @default(now())
}

model Meal {
  id            Int      @id @default(autoincrement())
  dietPlanId    Int       
  type          String
  items         String
  recipe_description String
  dietPlan      DietPlan @relation(fields: [dietPlanId], references: [id])
}
model Blog {
  blog_id    String @id @default(uuid()) 
  userId      String  
  title       String
  description String
 
}